@model FrontEnd.Models.UserViewModel

@{
    ViewData["Title"] = "Index";
}
<div class="col-4 mx-auto text-center">
<h2>Ingreso de usuario</h2>
</div>
<hr />
<body class="m-0 row justify-content-center">
<div class="navbar-header">
        <div class="col-4 mx-auto">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="form-label mt-8"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">    
                <label asp-for="Email" class="form-label mt-8"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label mt-8"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="d-grid gap-2">
                <input type="submit" value="Login" class="btn btn-lg btn-light btn-outline-dark" />
            </div>
        </form>
    </div>
</div>
    <br />
    <div class="col-4 mx-auto">
    <a asp-action="Index">Back to List</a>
    <br />
    <a  asp-controller="Usuario" asp-action="Create">RegistrarUsuario</a>

</div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
